                ref="account_bank_statement_policy.base_workflow_account_bank_statement"
            />
        <field
                name="field_id"
                search="[('model_id.model','=','account.bank.statement'),('name','=','reconcile_ok')]"
            />
        <field name="python_code">journal_id =\
document.journal_id
if journal_id.type == "bank":
    result = journal_id.bank_stmt_reconcile_group_ids.ids
