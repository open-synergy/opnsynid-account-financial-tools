<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="account_invoice_supplier_view_form" model="ir.ui.view">
            <field name="name">Account Invoice Export Button Form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//button[@name='%(account.action_account_state_open)d']" position="after">
                        <button 
                            name="%(supplier_invoice_export_to_accurate_action)d"
                            type="action" 
                            string="Export To Accurate"
                            states="proforma2,open,paid"
                        /> 
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
