<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="supplier_invoice_export_to_accurate_view_form" model="ir.ui.view">
            <field name="name">Supplier Invoice Export To Accurate Form</field>
            <field name="model">supplier.invoice.export_to_accurate</field>
            <field name="arch" type="xml">
                <form string="Supplier Invoice Export To Accurate">
                    <field invisible="1" name="state"/>
                    <field name="name" invisible="1"/>
                    <div states="get">
                        <h2>Export Complete</h2>
                        <p>Here is the exported supplier Invoice file: <field name="data" readonly="1" filename="name"/></p>
                    </div>
                    <footer states="choose">
                        <button name="button_export" string="Export" type="object" class="oe_highlight"/>
                        or 
                        <button special="cancel" string="Cancel" type="object" class="oe_link"/>
                    </footer>
                    <footer states="get">
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
                </form>
           </field>
        </record>

        <record id="supplier_invoice_export_to_accurate_action" model="ir.actions.act_window">
            <field name="name">Export To Accurate</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">supplier.invoice.export_to_accurate</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="supplier_invoice_export_to_accurate_view_form"/>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
